/* pages/StudentDetailForAdmin/StudentDetailForAdmin.wxss */
#StudentDetailForAdminMainView {
    margin: 0 16px;
    margin-bottom: 50px;
}
#StudentDetailForAdminMainViewHeader {
    margin-bottom: 15px;
}
.any-order-container {
    display: flex;
    flex-direction: column;
}
#any-order-submission {
    margin-top: 5px;
    font-size: 17px;
    font-weight: 500;
}
.submission-unsub {
    color: #D81717;
}
.submission-sub {
    color: #E3C019;
}
.submission-acc {
    color: #36B909;
}
.any-order-inner-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 18px 0;
    background-color: #ECECEC;
    border-radius: 9px;
    margin-top: 8px;
}
#any-order-point-requirement {
    font-size: 21px;
    font-weight: 500;
    padding: 0 35px;
    text-align: center;
    margin-bottom: 23px;
}
.any-order-button {
    height: 38px;
    width: 121px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 17px;
    font-weight: 500;
}
#any-order-accept-button {
    color: #09A00E;
    background-color: #D1F8D9;
}
#any-order-cancel-button {
    color: #D81717;
    background-color: #FFE6E6;
}