/* pages/StudentChoose/StudentChoose.wxss */
#student-choose-container {
    padding-top: 10px;
    padding-left: 16px;
    padding-right: 16px;
    padding-bottom: 40px;
    min-height: 100vh;
    box-sizing: border-box;
    background-color: var(--page-background);
}
#student-choose-search-container {
    border-radius: 10px;
    background-color: var(--list-search-box);
    height: 36px;
    display: flex;
    padding: 0 6px;
    align-items: center;
    margin-top: 14px;
    margin-bottom: 15px;
}
#student-list-container {
    background-color: var(--subcontainer-background);
    border-radius: 10px;
}
#search-image {
    width: 20px;
    height: 20px;
    padding-right: 4px;
}
#student-search-input {
    font-size: 17px;
    font-weight: 400;
    padding:0;
    margin:0;
}
#student-search-input-placeholder {
    color:var(--secondary);
}
#student-list-container {
    height: 449px;
    overflow-y: scroll;
    display: flex;
    flex-direction: column;
}
.student-display-row {
    padding: 6px 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.student-display-row-left {
    display: flex;
    flex-direction: column;
}
.student-display-nickname {
    font-size: 17px;
}
.student-display-name {
    font-size: 13px;
    color: var(--secondary);
}
.student-select-container {
    height: 22px;
    width: 22px;
    position: relative;
}
.student-select-button {
    position: absolute;
    top:0;
    left:0;
    height: 22px;
    width: 22px;
}
.student-display-row-right {
    display: flex;
    align-items: center;
}
.student-display-class {
    font-size: 17px;
    padding-right: 13px;
}
#student-select-button-dark {
    opacity: 0;
    z-index: 5;
}
@media (prefers-color-scheme: dark) {
    #student-select-button-dark {
        opacity: 1;
    }
}