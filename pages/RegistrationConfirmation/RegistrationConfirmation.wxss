/* pages/RegistrationConfirmation.wxss */
@import "../../global-colors.wxss";
.registrationconfirm-info-row {
  display: flex;
  justify-content: space-between;
  padding: 4px 0;
  align-items: center;
}
#registrationconfirm-container {
  display: flex;
  flex-direction: column;
  position: absolute;
  top:0;
  bottom:0;
  min-height: 100vh;
  background-color: var(--page-background);
}
#registrationconfirm-top-container {
  padding: 0 37px;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  justify-content: center;
}
#registrationconfirm-big-title {
  text-align: center;
  margin-bottom: 25px;
}
#registrationconfirm-subtext {
  margin: 0 45px;
  padding-bottom:65px;
  text-align: center;
}
#registrationconfirm-action-container {
  display: flex;
  flex-direction: column;
  flex-grow: 0;
}
.registrationconfirm-info-row-label {
  font-size: 17px;
  font-weight: 500;
}
.registrationconfirm-info-row-data {
  font-size: 17px;
  font-weight: 400;
}
#registrationconfirm-action-textbox-container {
  margin-bottom: 150px;
  display: flex;
  flex-direction: column;
}
#enter-request-text {
  margin: 0 45px;
  font-size: 22px;
  font-weight: 500;
  text-align: center;
  margin-bottom: 13px;
}
#input-container {
  display: flex;
  margin: 0 16px;
  padding: 0 13px;
  height: 44px;
  background-color: var(--subcontainer-background);
  border-radius: 10px;
  align-items: center;
}
#g-hint {
  margin-right: 7px;
  font-weight: 500;
}
#g-password-box {
  flex-grow: 1;
}
#submit-button-image {
  width: 26px;
  height: 26px;
}
#error-display {
  height: 20px;
  padding: 0 80px;
  margin-top: 9px;
  font-size: 17px;
  font-weight: 500;
  color: var(--warn);
  text-align: center;
}