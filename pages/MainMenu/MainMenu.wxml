<!--pages/MainMenu/MainMenu.wxml-->
<view id="main-menu-container">
  <view id="main-menu-top-container">
    <text class="big-title-text">ASB Center</text>
    <view id="main-menu-top-scan-button-container" bindtap="scanButtonClick">
      <image src="../../icons/scan.svg" id="main-menu-top-scan-button-image"></image>
    </view>
  </view>
  <view id="main-menu-info-container">
    <view class="main-menu-big-section">
      <text class="heading-text">My Events</text>
      <view class="main-menu-sub-container" id="my-events-container">
        <block wx:for="{{myEventsData}}" wx:key="id">
          <view wx:if="{{index==0}}" class="events-separator"></view>
          <view class="event-row">
            <text class="event-title-text"> {{item.title}} </text>
            <view class="event-row-right">
              <text class="event-till-time-text"> {{"now"}} </text>
              <image wx:if="{{item.canJump}}" src="../../icons/chevron-right.svg" class="event-row-chevron-image"></image>
            </view>
          </view>
        </block>
      </view>
    </view>

    <canvas class="qr-image" canvas-id="canvas"></canvas> 
  </view>
</view>
