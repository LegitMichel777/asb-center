/* pages/SportsMeet.wxss */
@import "../../global-colors.wxss";
@import "../MainMenu/MainMenu.wxss";
#sports-meet-container {
  margin: 0 16px;
  margin-top: 10px;
  margin-bottom: 80px;
}
#sports-meet-stamp-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 23px;
  margin-bottom: 25px;
}
#sports-meet-stamp-inner-container {
  margin-top: 12px;
  height: 97px;
  background-color: var(--subcontainer-background);
  width: 100%;
  border-radius: 11px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sports-meet-stamp-image {
  height: 62px;
  width: 62px;
}
#sports-meet-stamp-inner {
  padding: 0 26px;
}
#sports-meet-code-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 25px;
}
#sports-meet-code-heading {
  margin-bottom: 10px;
}
#sports-meet-leaderboard-container {
  display: flex;
  align-items: center;
  flex-direction: column;
}
#sports-meet-leaderboard-heading {
  margin-bottom: 10px;
}
.sports-meet-leaderboard-block {
  height: 98px;
  border-radius: 8px;
  overflow: hidden;
  width: 100%;
  display: flex;
  justify-content: center;
  position: relative;
  margin-bottom: 8px;
}
.sports-meet-leaderboard-block-image {
  width: 100%;
  height: auto;
}
.sports-meet-leaderboard-block-heading {
  position: absolute;
  top: 9px;
  left: 9px;
  font-weight: 700;
  color: white;
  font-size: 17px;
}
.sports-meet-leaderboard-block-text {
  position: absolute;
  bottom: 9px;
  left: 9px;
  font-weight: 500;
  color: white;
  font-size: 17px;
}
#sports-meet-admin-button {
  width: 41px;
  height: 41px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--subcontainer-background);
  border-radius: 50%;
}
#sports-meet-heading-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
#sports-meet-admin-image {
  height: 20px;
  width: 17px;
}
#sports-meet-upcoming-events-container {
  margin-top: 23px;
  display: flex;
  flex-direction: column; 
}
#sports-meet-upcoming-events-inner-container {
  margin-top: 12px;
  background-color: var(--subcontainer-background);
  border-radius: 11px;
}
.upcoming-events-separator {
  margin-left: 18px;
  padding-top:1px;
  position: relative;
  background-color: var(--list-separator);
}
.upcoming-events-block {
  height: 55px;
  display: flex;
  justify-content: space-between;
  margin: 0 16px;
  align-items: center;
}
.upcoming-events-left-block {
  display: flex;
  flex-direction: column;
}
.upcoming-event-upcoming {
  color: #3671E0;
  font-weight: bold;
  font-size: 13px;
}
.upcoming-events-title {
  font-size: 17px;
  font-weight: 500;
}
.upcoming-events-right-block {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.upcoming-events-location {
  color: var(--secondary);
  font-size: 15px;
  font-weight: 500;
}
.upcoming-events-time {
  color: var(--secondary);
  font-size: 13px;
  font-weight: 500;
}
#upcoming-events-heading {
  margin: 0 auto;
}